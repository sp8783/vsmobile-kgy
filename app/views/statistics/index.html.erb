                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-semibold">
                    <%= partner[:wins] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <span class="text-sm font-semibold text-gray-900"><%= partner[:win_rate] %>%</span>
                      <div class="ml-3 w-32 bg-gray-200 rounded-full h-2">
                        <div class="bg-blue-600 h-2 rounded-full" style="width: <%= partner[:win_rate].to_f %>%"></div>
                      </div>
                    </div>
