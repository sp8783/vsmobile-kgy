<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">対戦一覧</h1>
    <div class="flex space-x-3">
      <% if @latest_event %>
        <%= link_to "新規登録", new_event_match_path(@latest_event), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
      <% end %>
      <% if current_user.is_admin? %>
        <%= link_to "CSVインポート", new_admin_import_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>

  <% if notice %>
    <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <ul class="divide-y divide-gray-200">
      <% @matches.each do |match| %>
        <li>
          <%= link_to match_path(match), class: "block hover:bg-gray-50 transition" do %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center space-x-3">
                  <span class="text-sm text-gray-500">
                    <%= match.played_at.strftime('%Y年%m月%d日') %>
                  </span>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= match.event.name %>
                  </span>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center">
                <% team1_players = match.match_players.where(team_number: 1).order(:position) %>
                <% team2_players = match.match_players.where(team_number: 2).order(:position) %>

                <!-- Team 1 -->
                <div class="<%= match.winning_team == 1 ? 'bg-green-50 border border-green-200 rounded p-3' : 'p-3' %>">
                  <div class="text-xs font-semibold text-gray-500 mb-2 flex items-center">
                    <span>チーム1</span>
                    <% if match.winning_team == 1 %>
                      <span class="ml-2 px-2 py-0.5 bg-green-600 text-white rounded text-xs">勝利</span>
                    <% end %>
                  </div>
                  <% team1_players.each do |player| %>
                    <div class="flex items-center justify-between mb-1">
                      <span class="text-sm font-medium text-gray-900"><%= player.user.nickname %></span>
                      <span class="text-xs text-gray-500"><%= player.mobile_suit.name %></span>
                    </div>
                  <% end %>
                </div>

                <!-- VS -->
                <div class="text-center text-gray-400 font-bold text-xl">
                  VS
                </div>

                <!-- Team 2 -->
                <div class="<%= match.winning_team == 2 ? 'bg-green-50 border border-green-200 rounded p-3' : 'p-3' %>">
                  <div class="text-xs font-semibold text-gray-500 mb-2 flex items-center">
                    <span>チーム2</span>
                    <% if match.winning_team == 2 %>
                      <span class="ml-2 px-2 py-0.5 bg-green-600 text-white rounded text-xs">勝利</span>
                    <% end %>
                  </div>
                  <% team2_players.each do |player| %>
                    <div class="flex items-center justify-between mb-1">
                      <span class="text-sm font-medium text-gray-900"><%= player.user.nickname %></span>
                      <span class="text-xs text-gray-500"><%= player.mobile_suit.name %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if @matches.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">対戦記録がまだありません</p>
    </div>
  <% end %>

  <!-- Pagination -->
  <% if @matches.respond_to?(:total_pages) && @matches.total_pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%= paginate @matches %>
    </div>
  <% end %>
</div>
