<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to "← 対戦詳細に戻る", match_path(@match), class: "text-blue-600 hover:text-blue-500" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">対戦記録編集</h1>
  <p class="text-sm text-gray-600 mb-6"><%= @match.event.name %></p>

  <%= form_with(model: @match, class: "space-y-6") do |form| %>
    <% if @match.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold text-lg mb-2"><%= pluralize(@match.errors.count, "個のエラー") %>があります:</h2>
        <ul class="list-disc list-inside">
          <% @match.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">試合日時</h2>
      <%= form.datetime_local_field :played_at, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">チーム1</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% team1_players = @match.match_players.where(team_number: 1).order(:position) %>
        <%= form.fields_for :match_players, team1_players[0] do |player_form| %>
          <%= player_form.hidden_field :id %>
          <%= player_form.hidden_field :team_number, value: 1 %>
          <%= player_form.hidden_field :position, value: 1 %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">プレイヤー1</label>
            <%= player_form.collection_select :user_id, @users, :id, :nickname, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            <%= player_form.collection_select :mobile_suit_id, @mobile_suits, :id, :name, {}, { class: "mt-2 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", data: { controller: "select2", placeholder: "機体を検索..." } } %>
          </div>
        <% end %>

        <%= form.fields_for :match_players, team1_players[1] do |player_form| %>
          <%= player_form.hidden_field :id %>
          <%= player_form.hidden_field :team_number, value: 1 %>
          <%= player_form.hidden_field :position, value: 2 %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">プレイヤー2</label>
            <%= player_form.collection_select :user_id, @users, :id, :nickname, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            <%= player_form.collection_select :mobile_suit_id, @mobile_suits, :id, :name, {}, { class: "mt-2 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", data: { controller: "select2", placeholder: "機体を検索..." } } %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">チーム2</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% team2_players = @match.match_players.where(team_number: 2).order(:position) %>
        <%= form.fields_for :match_players, team2_players[0] do |player_form| %>
          <%= player_form.hidden_field :id %>
          <%= player_form.hidden_field :team_number, value: 2 %>
          <%= player_form.hidden_field :position, value: 3 %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">プレイヤー3</label>
            <%= player_form.collection_select :user_id, @users, :id, :nickname, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            <%= player_form.collection_select :mobile_suit_id, @mobile_suits, :id, :name, {}, { class: "mt-2 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", data: { controller: "select2", placeholder: "機体を検索..." } } %>
          </div>
        <% end %>

        <%= form.fields_for :match_players, team2_players[1] do |player_form| %>
          <%= player_form.hidden_field :id %>
          <%= player_form.hidden_field :team_number, value: 2 %>
          <%= player_form.hidden_field :position, value: 4 %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">プレイヤー4</label>
            <%= player_form.collection_select :user_id, @users, :id, :nickname, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
            <%= player_form.collection_select :mobile_suit_id, @mobile_suits, :id, :name, {}, { class: "mt-2 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", data: { controller: "select2", placeholder: "機体を検索..." } } %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">勝利チーム</h2>
      <div class="flex space-x-4">
        <label class="flex items-center">
          <%= form.radio_button :winning_team, 1, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <span class="ml-2 text-sm text-gray-900">チーム1</span>
        </label>
        <label class="flex items-center">
          <%= form.radio_button :winning_team, 2, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <span class="ml-2 text-sm text-gray-900">チーム2</span>
        </label>
      </div>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "キャンセル", match_path(@match), class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      <%= form.submit "更新", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
