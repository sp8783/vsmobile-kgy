<%= form_with(model: [:admin, master_emoji], class: "space-y-6") do |form| %>
  <% if master_emoji.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold text-lg mb-2"><%= pluralize(master_emoji.errors.count, "個のエラー") %>があります:</h2>
      <ul class="list-disc list-inside">
        <% master_emoji.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "例: いいね" %>
  </div>

  <div>
    <%= form.label :image_key, "絵文字/画像キー", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :image_key, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "例: 👍 または custom.png" %>
    <p class="mt-1 text-xs text-gray-500">
      絵文字を直接入力するか、アセット画像のファイル名を指定（例: custom.png）<br>
      アセット画像は app/assets/images/emojis/ に配置してください
    </p>
  </div>

  <div>
    <%= form.label :position, "表示順", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :position, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "例: 1" %>
    <p class="mt-1 text-xs text-gray-500">小さい数字ほど先に表示されます（空欄の場合は末尾に表示）</p>
  </div>

  <div>
    <%= form.label :is_active, class: "flex items-center cursor-pointer" do %>
      <%= form.check_box :is_active, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2" %>
      <span class="text-sm font-medium text-gray-700">有効（ユーザーがリアクションで使用可能）</span>
    <% end %>
  </div>

  <% if master_emoji.persisted? && master_emoji.image_key.present? %>
    <div class="bg-gray-50 p-4 rounded-lg">
      <p class="text-sm font-medium text-gray-700 mb-2">プレビュー</p>
      <div class="text-4xl">
        <% if master_emoji.asset_image? %>
          <%= image_tag "emojis/#{master_emoji.image_key}", class: "w-12 h-12", alt: master_emoji.name %>
        <% else %>
          <%= master_emoji.image_key %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", admin_master_emojis_path, class: "px-4 py-2 bg-gray-600 text-white font-semibold rounded-md hover:bg-gray-700" %>
    <%= form.submit master_emoji.new_record? ? "登録" : "更新", class: "px-4 py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
