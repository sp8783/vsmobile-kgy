<div class="max-w-2xl mx-auto px-4 py-6" data-controller="rotation-subscriber" data-rotation-subscriber-rotation-id-value="<%= @rotation.id %>">
  <!-- Header -->
  <div class="mb-6 text-center">
    <h1 class="text-2xl font-bold text-gray-900"><%= @rotation.name %></h1>
    <p class="mt-2 text-sm text-gray-600"><%= @rotation.event.name %></p>
    <div class="mt-2 inline-flex items-center px-3 py-1 bg-red-100 border border-red-300 rounded-full">
      <span class="w-2 h-2 bg-red-500 rounded-full mr-2 animate-pulse"></span>
      <span class="text-xs font-medium text-red-800">リアルタイム更新中</span>
    </div>
  </div>

  <!-- Current Match -->
  <div class="mb-6 bg-gradient-to-r from-blue-500 to-blue-600 text-white border-2 border-blue-700 rounded-lg p-6 text-center shadow-lg">
    <div class="text-sm font-semibold mb-2 opacity-90">現在の試合</div>
    <div class="text-6xl font-bold mb-2">
      第<%= @rotation.current_match_index + 1 %>試合
    </div>
    <div class="mt-2 text-sm opacity-90">
      全<%= @rotation.rotation_matches.count %>試合中（進捗: <%= (((@rotation.current_match_index + 1).to_f / @rotation.rotation_matches.count) * 100).round %>%）
    </div>
  </div>

  <!-- Next Match Info -->
  <% if @next_match %>
    <%
      urgency_class = if @matches_until_next == 0
        "from-red-500 to-red-600 border-red-700 shadow-2xl animate-pulse"
      elsif @matches_until_next == 1
        "from-orange-500 to-orange-600 border-orange-700 shadow-xl"
      elsif @matches_until_next <= 3
        "from-yellow-400 to-yellow-500 border-yellow-600 shadow-lg"
      else
        "from-green-400 to-emerald-500 border-green-600"
      end
    %>
    <div class="mb-6 bg-gradient-to-r <%= urgency_class %> text-white border-2 rounded-lg p-6">
      <div class="text-center mb-4">
        <div class="text-sm font-semibold mb-2 opacity-90">⏰ あなたの次の出番</div>
        <div class="text-5xl font-bold mb-3">
          第<%= @next_match.match_index + 1 %>試合
        </div>
        <% if @matches_until_next == 0 %>
          <div class="bg-white text-red-600 px-6 py-4 rounded-lg text-2xl font-bold animate-pulse mb-2 shadow-lg">
            🔔 今です！準備してください！
          </div>
        <% elsif @matches_until_next == 1 %>
          <div class="bg-white text-orange-600 px-5 py-3 rounded-lg text-xl font-bold mb-2 shadow-md">
            ⚠️ 次の試合です！準備してください！
          </div>
        <% elsif @matches_until_next == 2 %>
          <div class="bg-white text-yellow-700 px-4 py-2 rounded-lg text-lg font-bold mb-2">
            ⏳ あと2試合後です
          </div>
        <% elsif @matches_until_next <= 5 %>
          <div class="bg-white bg-opacity-90 text-gray-900 px-4 py-2 rounded-lg text-base font-semibold mb-2">
            あと<%= @matches_until_next %>試合後
          </div>
        <% else %>
          <div class="text-base opacity-90 mb-2">
            あと<%= @matches_until_next %>試合後
          </div>
        <% end %>
      </div>

      <% if @match_info %>
        <% streaming_player = @next_match.team1_player1 %>
        <% is_streaming = (streaming_player.id == @current_user_id) %>

        <!-- Streaming indicator if you are streaming -->
        <% if is_streaming %>
          <div class="bg-white border-4 border-red-500 rounded-lg p-4 mb-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-red-600 mb-1">📹 あなたが配信台担当です</div>
              <div class="text-sm text-gray-600">左側の席に座ってください</div>
            </div>
          </div>
        <% end %>

        <!-- Match Details Grid -->
        <div class="grid grid-cols-1 gap-3">
          <!-- Partner -->
          <div class="bg-white bg-opacity-95 rounded-lg p-4 shadow-md">
            <div class="text-xs text-gray-600 mb-2 font-semibold">🤝 パートナー</div>
            <div class="text-2xl font-bold <%= streaming_player.id == @match_info[:partner].id ? 'text-red-600' : 'text-gray-900' %>">
              <%= @match_info[:partner].nickname %>
              <% if streaming_player.id == @match_info[:partner].id %>
                <span class="ml-2 px-3 py-1 bg-red-500 text-white rounded text-sm font-semibold align-middle">📹 配信台</span>
              <% end %>
            </div>
          </div>

          <!-- Opponents -->
          <div class="bg-white bg-opacity-95 rounded-lg p-4 shadow-md">
            <div class="text-xs text-gray-600 mb-3 font-semibold">⚔️ 対戦相手</div>
            <div class="space-y-2">
              <% @match_info[:opponents].each do |opponent| %>
                <div class="flex items-center justify-between bg-gray-50 rounded p-2">
                  <div class="text-xl font-bold <%= streaming_player.id == opponent.id ? 'text-red-600' : 'text-gray-900' %>">
                    <%= opponent.nickname %>
                  </div>
                  <% if streaming_player.id == opponent.id %>
                    <span class="px-2 py-1 bg-red-500 text-white rounded text-xs font-semibold">📹 配信台</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="mb-6 bg-gradient-to-r from-gray-200 to-gray-300 border-2 border-gray-400 rounded-lg p-8 text-center">
      <div class="text-3xl mb-2">🎉</div>
      <div class="text-xl font-bold text-gray-800 mb-2">
        これ以降の試合予定はありません
      </div>
      <div class="text-base text-gray-700 mt-2">
        お疲れ様でした！
      </div>
    </div>
  <% end %>

  <!-- Statistics -->
  <div class="bg-white shadow-lg rounded-lg p-6 mb-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="h-5 w-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      このローテーションの統計
    </h3>
    <% if @player_statistics[@current_user_id] %>
      <% stats = @player_statistics[@current_user_id] %>
      <div class="grid grid-cols-1 gap-3">
        <div class="bg-gray-50 rounded p-3">
          <div class="text-xs text-gray-500">試合数</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= stats[:match_count] %>試合
          </div>
        </div>

        <div class="bg-gray-50 rounded p-3">
          <div class="text-xs text-gray-500 mb-2">ペアを組んだ回数</div>
          <div class="text-sm text-gray-700">
            <% if stats[:pair_counts].any? %>
              <% stats[:pair_counts].sort_by { |_, count| -count }.first(5).each do |player_id, count| %>
                <% partner = User.find(player_id) %>
                <div class="flex justify-between py-1">
                  <span><%= partner.nickname %></span>
                  <span class="font-semibold"><%= count %>回</span>
                </div>
              <% end %>
            <% else %>
              <div class="text-gray-400">データなし</div>
            <% end %>
          </div>
        </div>

        <div class="bg-gray-50 rounded p-3">
          <div class="text-xs text-gray-500 mb-2">対戦した回数</div>
          <div class="text-sm text-gray-700">
            <% if stats[:opponent_counts].any? %>
              <% stats[:opponent_counts].sort_by { |_, count| -count }.first(5).each do |player_id, count| %>
                <% opponent = User.find(player_id) %>
                <div class="flex justify-between py-1">
                  <span><%= opponent.nickname %></span>
                  <span class="font-semibold"><%= count %>回</span>
                </div>
              <% end %>
            <% else %>
              <div class="text-gray-400">データなし</div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 text-center">このローテーションには参加していません</p>
    <% end %>
  </div>

  <!-- Navigation -->
  <div class="flex flex-col sm:flex-row justify-center gap-3">
    <%= link_to @rotation, class: "px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 text-center" do %>
      <span>📊 詳細ビュー</span>
    <% end %>
    <%= link_to rotations_path, class: "px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 text-center" do %>
      <span>← 一覧に戻る</span>
    <% end %>
  </div>

  <!-- Help Text -->
  <div class="mt-6 text-center text-xs text-gray-500">
    <p>このページは自動的に更新されます。ブラウザを開いたままにしてください。</p>
  </div>
</div>

<!-- Notification Script -->
<script>
  // Request notification permission on load
  if ('Notification' in window && Notification.permission === 'default') {
    Notification.requestPermission();
  }

  // Check if it's time to notify (2-3 matches before)
  <% if @next_match && @matches_until_next.present? && @matches_until_next <= 3 && @matches_until_next > 0 %>
    if ('Notification' in window && Notification.permission === 'granted') {
      new Notification('出番が近づいています！', {
        body: 'あと<%= @matches_until_next %>試合後です。準備してください。',
        icon: '/icon.png'
      });
    }
  <% elsif @next_match && @matches_until_next == 0 %>
    if ('Notification' in window && Notification.permission === 'granted') {
      new Notification('今です！', {
        body: 'あなたの試合です。準備してください！',
        icon: '/icon.png',
        tag: 'current-match'
      });
    }
  <% end %>
</script>
