<%= form_with(model: event, class: "space-y-6") do |form| %>
  <% if event.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold text-lg mb-2"><%= pluralize(event.errors.count, "個のエラー") %>があります:</h2>
      <ul class="list-disc list-inside">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "イベント名", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, placeholder: "例: 第1回オフライン貸切会@新宿スポラン", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :held_on, "開催日", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_field :held_on, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :description, "説明（任意）", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, placeholder: "イベントの詳細や特記事項など", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :broadcast_url, "配信URL（任意）", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.url_field :broadcast_url, placeholder: "https://www.youtube.com/watch?v=...", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">YouTubeなどの配信アーカイブURLを入力すると、詳細画面にリンクが表示されます</p>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", events_path, class: "px-4 py-2 bg-gray-600 text-white font-semibold rounded-md hover:bg-gray-700" %>
    <%= form.submit event.new_record? ? "作成" : "更新", class: "px-4 py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
